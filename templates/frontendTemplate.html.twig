<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet"> 
        <script src="https://kit.fontawesome.com/836a2159df.js" crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="topbar">
            <ul>
                <li><img src="{{url('home')}}/assets/images/logoSnowtricks.png" alt=""></li>
                <div class="containerLink">
                    <li><a class="accueil" href="/">Accueil</a></li>
                    {% if not app.user %}
                        <li><a class="inscription" href="/inscription">S'inscrire</a></li>
                        <li><a class="connexion" href="{{ path('login') }}">Se connecter</a></li>
                    {% else %}
                        <li><a class="inscription" href="/tricks/ajouter">Ajouter un tricks</a></li>
                        <li><a class="connexion" href="{{ path('logout') }}">Déconnexion</a></li>
                    {% endif %}
                </div>
            </ul>
        </nav>

        {% for flashMessage in app.session.flashbag.get('message') %}
            {% if flashMessage is not empty %}
                <div class="containerFlashMessage">
                    {{ flashMessage }}       
                </div>
            {% endif %}
        {% endfor %}

        {% for flashMessage in app.session.flashbag.get('error') %}
            {% if flashMessage is not empty %}
                <div class="containerFlashError">
                    {{ flashMessage }}       
                </div>
            {% endif %}
        {% endfor %}
        
        {% block body %}{% endblock %}
        <div class="footer">
            <ul>
                <li><a href="/mentions-legales">Mentions Légales</a></li>
                <li>© 2020 Copyright <a href="/">SnowTricks.com</a></li>
            </ul>
        </div>
    </body>
</html>
