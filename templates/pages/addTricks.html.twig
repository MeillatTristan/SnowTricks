{% extends "frontendTemplate.html.twig" %}

{% block title %} SnowTricks | Ajouter un tricks {% endblock %}

{% block stylesheets %}
  {{ encore_entry_link_tags('styleFrontend') }}
{% endblock %}

{% block body %}
<div class="containerPadding">
  <div class="containerTrick">
    <h1>Ajouter un tricks</h1>
    <span class="lign"></span>
    {{ form_start(form) }}
    <div class="firstGroup">
      {{ form_widget(form.name) }}
      <div class="containerCategory">
        {{ form_widget(form.category) }}
        <a class="addCategories" href="/categories/new">Ajouter une cat√©gorie</a>
      </div>
    </div>
    <div class="containerMedia">
      <div class="containerImages">
        <label for="trick_images">
          {{ form_widget(form.images) }}
          <p>Ajouter des images ...</p>
        </label>
        <div id="containerPreview"></div>
      </div>
      {{ form_widget(form.description) }} 
    </div>
      <div class="containerInput">
        <a href="#">Supprimer</a>
        <input type="submit" value="Valider">
      </div>
      {{ form_end(form) }}
    </div>
  </div>
</div>
{% endblock %}



{% block javascript %}
  <script src="{{ asset('app.js') }}"></script>
  {{ encore_entry_link_tags('preview.js') }}
{% endblock %}