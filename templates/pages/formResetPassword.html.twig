{% endblock %}

{% block body %}
<div class="containerPadding">
  <div class="containerForm">
    <h1>Réinitialisation</h1>
  {{ form_start(form) }}
    <div class="error">
    {{ form_errors(form.password) }}
    </div>
    {{ form_errors(form) }}
